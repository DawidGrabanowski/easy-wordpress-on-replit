run = "php -S 0.0.0.0:5000 -t ."

entrypoint = "index.php"
modules = ["postgresql-16", "php-8.4"]

[nix]
channel = "stable-22_11"

[deployment]
run = ["php", "-S", "0.0.0.0:5000", "-t", "wordpress", "wordpress/router.php"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WordPress Server"

[[workflows.workflow]]
name = "WordPress Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t wordpress wordpress/router.php"
waitForPort = 5000
